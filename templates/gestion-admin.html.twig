{% include 'entete.html.twig' %}
{% include 'navbar.html.twig' %}
{% block content %}
    <section class="bannerAdminHome">
        <div class="dark:bg-gray-800 navVertical">
            <span class="colorCircle"></span>
            <span style="padding: 20px;"></span>
            <img class="imgNavVertical" src="./images/JeanneAlter_Left.jpg" width="200px">
        </div>
        <div>
            <div class="contenuconnect PL" style="display: flex; justify-content: center; align-content: center; padding-top: 200px;">
                <div class="login-form">
                    {% if result != null %}
                        <div class="alert {{ result.type == "success" ? "alert-success" : "alert-danger" }}">
                            <strong>{{ result.type == "success" ? "Succès" : "Erreur" }}</strong> {{ result.message }}
                        </div>
                    {% endif %}
                    <form action="createadminaccount" method="post">
                        <h2 class="text-center">Inscription</h2>
                        <div class="form-group">
                            <label>
                                <input type="text" name="login" class="form-control" placeholder="Pseudo" required="required" autocomplete="off">
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="text" name="nom" class="form-control" placeholder="Nom" required="required" autocomplete="off">
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="text" name="prenom" class="form-control" placeholder="Prenom" required="required" autocomplete="off">
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="email" name="email" class="form-control" placeholder="Email" required="required" autocomplete="off">
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="password" name="password" class="form-control" placeholder="Mot de passe" required="required" autocomplete="off">
                            </label>
                        </div>
                        <div class="form-group">
                            <label>
                                <input type="password" name="password_retype" class="form-control" placeholder="Re-tapez le mot de passe" required="required" autocomplete="off">
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="bg-blue-500 btn btn-primary btn-block">Créer</button>
                        </div>
                    </form>
                </div>
                <div class="ImgRep">
                    <img class="ImgMaskedHero" src="./images/milim.png" width="700" alt="MaskedHero">
                </div>
            </div>
        </div>
    </section>
    <style>
        .PL {
            padding-left: 250px;
        }
        @media screen and (max-width: 1100px) {
            .PL {
                padding-left: 0;
            }
            .ImgRep {
                display: none;
            }
        }
    </style>
{% endblock %}
{% include 'footer.html.twig' %}